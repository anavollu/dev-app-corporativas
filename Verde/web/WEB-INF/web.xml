<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RealizaLogin</servlet-name>
        <servlet-class>br.com.uff.verde.servlet.RealizaLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CriaDenuncia</servlet-name>
        <servlet-class>br.com.uff.verde.servlet.CriaDenuncia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtualizaStatusDenuncia</servlet-name>
        <servlet-class>br.com.uff.verde.servlet.AtualizaStatusDenuncia</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConsultaDenuncias</servlet-name>
        <servlet-class>br.com.uff.verde.servlet.ConsultaDenuncias</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InfosUser</servlet-name>
        <servlet-class>br.com.uff.verde.servlet.InfosUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CriaDoacoes</servlet-name>
        <servlet-class>br.com.uff.verde.servlet.CriaDoacoes</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RealizaLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CriaDenuncia</servlet-name>
        <url-pattern>/criaDenuncia</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtualizaStatusDenuncia</servlet-name>
        <url-pattern>/atualizaStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConsultaDenuncias</servlet-name>
        <url-pattern>/consultaDenuncias</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfosUser</servlet-name>
        <url-pattern>/infosUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CriaDoacoes</servlet-name>
        <url-pattern>/criaDoacoes</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
